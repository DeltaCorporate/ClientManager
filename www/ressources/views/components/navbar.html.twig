<div class="h-full p-3 space-y-2 bg-primary-100 text-primary-400 border-r border-primary-200 overflow-y-auto">
{% if (auth()) %}
    <div class="flex items-center p-2 space-x-4">
        <img
                src="{{ avatar(auth().data.avatar) }}"
                alt=""
                class="w-12 h-12 rounded-full  object-cover aspect-square"
        />
        <div>
            <h2 class="text-lg font-semibold">{{ auth().username }}</h2>
            <span class="flex items-center space-x-1">
        <a href="{{ url('user.profile') }}" class="text-xs hover:underline text-primary-50"
        >View profile</a
        >
      </span>
        </div>
    </div>
{% endif %}
    <div class="divide-y divide-primary-300">
        <ul class="pt-2 pb-4 space-y-1 text-sm">
            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="{{ url('home') }}" class="flex items-center p-2 space-x-3 rounded-md text-primary-400">
                    <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 512 512"
                            class="w-5 h-5 fill-current text-primary-50"
                    >
                        <path
                                d="M68.983,382.642l171.35,98.928a32.082,32.082,0,0,0,32,0l171.352-98.929a32.093,32.093,0,0,0,16-27.713V157.071a32.092,32.092,0,0,0-16-27.713L272.334,30.429a32.086,32.086,0,0,0-32,0L68.983,129.358a32.09,32.09,0,0,0-16,27.713V354.929A32.09,32.09,0,0,0,68.983,382.642ZM272.333,67.38l155.351,89.691V334.449L272.333,246.642ZM256.282,274.327l157.155,88.828-157.1,90.7L99.179,363.125ZM84.983,157.071,240.333,67.38v179.2L84.983,334.39Z"
                        ></path>
                    </svg>
                    <span>Home</span>
                </a>
            </li>
        </ul>
        <ul class="pt-4 pb-2 space-y-1 text-sm">
            {%  if auth() %}

            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="{{ url('user.logout') }}" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 512 512"
                            class="w-5 h-5 fill-current text-primary-50"
                    >
                        <path
                                d="M440,424V88H352V13.005L88,58.522V424H16v32h86.9L352,490.358V120h56V456h88V424ZM320,453.642,120,426.056V85.478L320,51Z"
                        ></path>
                        <rect width="32" height="64" x="256" y="232"></rect>
                    </svg>
                    <span>Logout</span>
                </a>
            </li>
            {% else %}
            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="{{ url('user.login') }}" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5  text-primary-50" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                    </svg>
                    <span>Sign in</span>
                </a>
            </li>
            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="{{ url('user.register') }}" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5  text-primary-50" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                    </svg>
                    <span>Sign up</span>
                </a>
            </li>
            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="#" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span>Store</span>
                </a>
            </li>
            <li class="hover:bg-primary-200 transition  duration-300 ease-in-out">
                <a href="#" class="flex items-center p-2 space-x-3 rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span>Sales</span>
                </a>
            </li>
            {% endif %}
        </ul>
    </div>
</div>