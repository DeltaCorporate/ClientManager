{% extends "layouts/base.html.twig" %}

{% block title %}
    Update category
{% endblock %}


{% block body %}
    <section class="mt-3">
        <h1 class="text-primary-400 font-semibold text-3xl block mb-5">Update this category</h1>
        <form action="{{ url("admin.category.update","post") }}" method="post">
            {{ csrf() }}
            <input type="hidden" value="{{ category.id }}" name="category">
            <div class="grid grid-cols-12">
                <div class="form-control col-span-full md:col-span-6">
                    <label for="name" class="text-primary-400 block mb-3">Name</label>
                    <input type="text" id="name" name="name" value="{{ category.name }}"
                           class="rounded appearance-none bg-primary-300 text-primary-400 p-2 w-10/12 p-2 outline-none focus:outline-none focus:ring-0">
                    <p class="text-red-500 text-sm">{{ session('validation')['name'] }}</p>
                </div>

                <div class="form-control col-span-full md:col-span-6">
                    <label for="description" class="text-primary-400 block mb-3">Description</label>
                    <textarea id="description" rows="10" name="description"
                              class="resize-none rounded appearance-none bg-primary-300 text-primary-400 p-2 w-10/12 p-2 outline-none focus:outline-none focus:ring-0">{{ category.description }}</textarea>
                    <p class="text-red-500 text-sm">{{ session('validation')['description'] }}</p>
                </div>

            </div>
            <div class="mt-5">
                <button type="submit" class="text-primary-100 bg-primary-50 rounded px-4 py-2">Update category</button>
            </div>
        </form>
    </section>
{% endblock %}
