{% extends "layouts/email_layout.html.twig" %}


{% block body %}
<div class="container mx-auto w-full h-screen flex items-center justify-center bg-primary-100">
    <div class="space-y-12">
        <div class=" flex items-center space-x-5">
            <img src="{{ image('logo.svg') }}" class="w-12 h-12" alt="Logo">
            <h4 class="text-white font-medium text-xl">Client Manager</h4>
        </div>
        <div class="text-primary-400">
            Thank you {{ user.username }} for your registration.
            Please confirm your email by clicking on the button below!
        </div>
        <a href="{{ url('user.verifaccount') }}?token={{ token }}&id={{ user.id }}" class="block w-max bg-primary-50 text-primary-100 px-4 py-2 rounded">
           Verfiy my account
        </a>
        <div class="h-[1px] bg-primary-400"></div>
        <p class="text-sm text-primary-400"> If you have any problem to access the website on clicking the button, copy and past this link in your browser</p>
        <a href="{{ url('user.verifaccount') }}?token={{ token }}&id={{ user.id }}" class="text-primary-400 text-sm block mt-2">
            {{ url('user.verifaccount') }}?token={{ token }}&id={{ user.id }}
        </a>
    </div>
</div>


{% endblock %}